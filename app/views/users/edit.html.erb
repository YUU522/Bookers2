
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div class="alert">
          <h4><%= pluralize(@user.errors.count, "error") %>error prohibited this obj from being saved:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class='form-group'>
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name",class:'form-control'%>
        </div>
        <div class='form-group'>
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, autofocus: true, id:"user_image",class:'form-control-file'%>
        </div>
        <div class='form-group'>
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, id:"user_introduction",class:'form-control'%>
        </div>
        <div class='form-group'>
          <label for="update_user"></label>
          <%= f.submit :"Update User", autofocus: true, id:"update_user",class:'btn btn-secondary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>