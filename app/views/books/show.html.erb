<div class = "container px-5 px-sm-0">
  <div class="row">
    <%= render 'books', user: @user %>
    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_profile_image(80, 80) %>
                  <% end %><br>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= @book.user.name %> <!-- ユーザー名を表示 -->
                  <% end %>
                </td>
                <td> <%= link_to "#{@book.title} ", book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td><div class="actions d-flex">
                    <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success custom-button mr-3" %>
                    <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger " %>
                </div></td>
                <% end %>
              </tr>
            </tbody>
        </table>
    </div>
  </div>
</div>
