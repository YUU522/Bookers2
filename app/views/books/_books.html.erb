
<div class="col-md-3 mt-3">
  <h2>User info</h2>
  <% if current_user && current_user == @user %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <td style="border-top: none;"><%= image_tag current_user.get_profile_image(100, 100) %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th>Introduction</th>
          <td><%= current_user.introduction %></td>
        </tr>
      </tbody>
    </table>
  <% else %>
    <table class="table">
        <tbody>
          
          <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
    </table>
  <% end %>
  <div class="row">
    <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fas fa-user-cog"></i> 
    <% end %>
  </div>
  
  <h2 class="mt-2">New book</h2>
  <%= form_with model: Book.new do |f| %>
    <div class='form-group'>
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, autofocus: true, id: "inputTitle", class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :body, "Body" %>
      <%= f.text_area :body, autofocus: true, id: "inputBody", class: 'form-control' %>
    </div>
    <!--<button class="btn btn-success" type="submit">Create Book</button>-->
    <%= f.submit 'Create book', class: 'btn btn-success'%>
  <% end %>
</div>